{
    "name": "lemoni/core13",
    "description": "A lightweight and simple PHP framework.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "lemoni-ir",
            "email": "info@lemoni.ir"
        }
    ],
    "scripts": {
        "post-create-project-cmd": [
            "php scripts/install.php"
        ]
    },
    "autoload": {
        "psr-4": {
            "backend\\": "backend/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "vlucas/phpdotenv": "^5.6",
        "lemoni/router": "*",
        "lemoni/request": "*",
        "lemoni/dirs": "*",
        "lemoni/logs": "*",
        "lemoni/database": "*"
    },
    "require-dev": {
        "lemoni/test": "*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/router",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/request",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/dirs",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/logs",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/string",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/database",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "C:/web/var.www/repositories/lemoni/test",
            "options": {
                "symlink": true
            }
        }
    ]
}